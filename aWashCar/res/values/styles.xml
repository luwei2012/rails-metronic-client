<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- 用RadioGroup来实现Tab选项卡功能，RadioButton -->
    <style name="RadioTabStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@drawable/selector_radio_button_text_color</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ActivityTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/main_fragment_bg_color</item>
    </style>

    <style name="MyCheckBoxStyle">
        <item name="android:button">@drawable/selector_checkbox</item>
        <item name="android:textSize">@dimen/text_size_popupwindow_select_time</item>
        <item name="android:textColor">@drawable/selector_text_color_enable</item>
    </style>
    
    <style name="CheckBoxStarStyle">
        <item name="android:button">@drawable/selector_checkbox_star</item>
        <item name="android:textSize">@dimen/text_size_popupwindow_select_time</item>
        <item name="android:textColor">@drawable/selector_text_color_enable</item>
    </style>

    <style name="MyRadioButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:drawableBottom">@drawable/selector_radiobutton</item>
        <item name="android:textSize">@dimen/text_size_popupwindow_select_time</item>
        <item name="android:textColor">@drawable/selector_radiobutton_text_color</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="MyPopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_enter</item>
        <item name="android:windowExitAnimation">@anim/zoom_exit</item>
    </style>

    <style name="listview" parent="android:Widget.ListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="orderDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

</resources>