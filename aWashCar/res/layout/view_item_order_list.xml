<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp" >

    <ImageView
        android:id="@+id/merchant_list_item_logo"
        android:layout_width="124dp"
        android:layout_height="85dp"
        android:layout_marginLeft="@dimen/merchant_list_item_margin"
        android:layout_marginTop="5dp"
        android:src="@drawable/unload_image" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/merchant_list_item_margin"
        android:layout_toRightOf="@id/merchant_list_item_logo" >

        <TextView
            android:id="@+id/merchant_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="成都中宝宝马4S店ssssssssssss"
            android:textSize="@dimen/merchant_list_item_name_size" />

        <TextView
            android:id="@+id/merchant_list_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/merchant_list_item_name"
            android:layout_below="@+id/merchant_list_item_name"
            android:layout_marginTop="10dp"
            android:text="￥20"
            android:textColor="@color/font_red"
            android:textSize="@dimen/merchant_list_item_name_size" />

        <TextView
            android:id="@+id/merchant_list_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/merchant_list_item_price"
            android:layout_marginTop="10dp"
            android:text="未消费"
            android:textColor="@color/font_gray"
            android:textSize="@dimen/merchant_list_item_address_size" />
    </RelativeLayout>

</RelativeLayout>