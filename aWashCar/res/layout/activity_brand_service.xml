<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_brand_service_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.yuyaa.awashcar.widget.MyViewPager
                android:id="@+id/brand_advertisement_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/viewpager_dots_container"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="bottom|"
                android:background="#33000000"
                android:gravity="center" >
            </RelativeLayout>
        </FrameLayout>

        <HorizontalScrollView
            android:id="@+id/brand_service_discount_types_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/discount_types_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent" >

            <RelativeLayout
                android:id="@+id/brand_recomment_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/font_white" >
            </RelativeLayout>

            <TextView
                android:id="@+id/layout_brand_service_activity_collect"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/text_background_gradient"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="clickCallback"
                android:paddingLeft="10dp"
                android:text="@string/your_collect"
                android:textColor="@color/font_white"
                android:textSize="16sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent" >

            <RelativeLayout
                android:id="@+id/brand_brands_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/font_white" >
            </RelativeLayout>

            <TextView
                android:id="@+id/layout_brand_service_activity_brand"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/text_background_gradient"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="clickCallback"
                android:paddingLeft="10dp"
                android:text="@string/brand"
                android:textColor="@color/font_white"
                android:textSize="16sp" />
        </FrameLayout>
    </LinearLayout>

</ScrollView>