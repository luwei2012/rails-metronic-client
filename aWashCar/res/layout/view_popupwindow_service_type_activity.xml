<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_service_type_popup" >

    <ListView
        android:id="@+id/lv_service_type_popupwindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cacheColorHint="@null"
        android:divider="#eeeeee"
        android:listSelector="@android:color/transparent" />

    <Button
        android:id="@+id/btn_service_type_activity_popupwindow_ok"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_service_type_popupwindow"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_btn_personal_info_logout"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/font_white"
        android:textSize="18sp" />

</RelativeLayout>