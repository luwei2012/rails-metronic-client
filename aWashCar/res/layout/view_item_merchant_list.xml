<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp" >

    <ImageView
        android:id="@+id/merchant_list_item_logo"
        android:layout_width="124dp"
        android:layout_height="85dp"
        android:layout_marginLeft="@dimen/merchant_list_item_margin"
        android:layout_marginTop="5dp"
        android:src="@drawable/unload_image" />

    <TextView
        android:id="@+id/merchant_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/merchant_list_item_margin"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/merchant_list_item_logo"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="成都中宝宝马4S店ssssssssssss"
        android:textSize="@dimen/merchant_list_item_name_size" />

    <TextView
        android:id="@+id/merchant_list_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/merchant_list_item_name"
        android:layout_below="@+id/merchant_list_item_name"
        android:text="￥20"
        android:textColor="@color/font_red"
        android:textSize="@dimen/merchant_list_item_name_size" />

    <TextView
        android:id="@+id/merchant_list_item_orld_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/merchant_list_item_price"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/merchant_list_item_price"
        android:background="@drawable/line"
        android:text="￥20"
        android:textColor="@color/gray"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/merchant_list_item_layout_stars"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@id/merchant_list_item_price"
        android:layout_marginLeft="@dimen/merchant_list_item_margin"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/merchant_list_item_logo"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/merchant_list_item_star0"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/img_star_light_big" />

        <ImageView
            android:id="@+id/merchant_list_item_star1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/img_star_light_big" />

        <ImageView
            android:id="@+id/merchant_list_item_star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/img_star_light_big" />

        <ImageView
            android:id="@+id/merchant_list_item_star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/img_star_dark_big" />

        <ImageView
            android:id="@+id/merchant_list_item_star4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/img_star_dark_big" />
    </LinearLayout>

    <TextView
        android:id="@+id/merchant_list_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/merchant_list_item_layout_stars"
        android:layout_marginLeft="@dimen/merchant_list_item_margin"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/merchant_list_item_logo"
        android:text="地址：武侯区武侯大道"
        android:textColor="@color/font_gray"
        android:textSize="@dimen/merchant_list_item_address_size" />

    <TextView
        android:id="@+id/merchant_list_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/merchant_list_item_address"
        android:layout_alignBottom="@+id/merchant_list_item_address"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="5.2km"
        android:textSize="@dimen/merchant_list_item_address_size" />

</RelativeLayout>