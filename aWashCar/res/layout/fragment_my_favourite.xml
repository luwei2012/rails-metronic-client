<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.yuyaa.awashcar.widget.SegmentedRadioGroup
        android:id="@+id/radiogroup_my_favourite_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:checkedButton="@+id/rb_my_favourite_fragment_merchant"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_my_favourite_fragment_merchant"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/merchant"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/radio_colors"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_my_favourite_fragment_service"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="@string/service"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/radio_colors"
            android:textSize="14sp" />
    </com.yuyaa.awashcar.widget.SegmentedRadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>