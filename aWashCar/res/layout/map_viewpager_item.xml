<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_map_search_bottom_bar"
    android:onClick="clickCallback"
    android:padding="@dimen/margin_map_search_activity" >

    <RelativeLayout
        android:id="@+id/layout_map_search_activity_bottom_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" >

        <RelativeLayout
            android:id="@+id/layout_map_search_activity_bottom_0"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/text_map_search_activity_location_detail"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:maxWidth="250dp"
                android:text="成都中宝宝马4s店"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_map_search_activity_tuan"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/text_map_search_activity_location_detail"
                android:background="@drawable/img_shake_popup_item_discount" />

            <ImageView
                android:id="@+id/img_map_search_activity_ding"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_map_search_activity"
                android:layout_toRightOf="@id/img_map_search_activity_tuan"
                android:background="@drawable/img_ding" />

            <TextView
                android:id="@+id/text_map_search_activity_detail"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/detail"
                android:textColor="@color/font_red"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/text_map_search_activity_detail"
                android:background="@drawable/img_divider_vertical_small" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_map_search_activity_bottom_0"
            android:layout_marginTop="5dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_map_search_activity_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="距我1.1km"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:src="@drawable/img_divider_vertical_small" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_map_search_activity_star0"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/img_star_light_small" />

                <ImageView
                    android:id="@+id/img_map_search_activity_star1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/img_star_light_small" />

                <ImageView
                    android:id="@+id/img_map_search_activity_star2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/img_star_light_small" />

                <ImageView
                    android:id="@+id/img_map_search_activity_star3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/img_star_light_small" />

                <ImageView
                    android:id="@+id/img_map_search_activity_star4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/img_star_dark_small" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/img_divider_vertical_small" />

                <TextView
                    android:id="@+id/text_map_search_activity_sale_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="￥50"
                    android:textColor="@color/font_red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_map_search_activity_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/line"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="50"
                    android:textColor="@color/font_gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_map_search_activity_bottom_2"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:minHeight="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_map_search_activity_navigate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_map_search_right"
            android:clickable="true"
            android:gravity="center"
            android:onClick="clickCallback"
            android:text="@string/go_there"
            android:textColor="@drawable/selector_text_color_black_white"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_map_search_right"
            android:clickable="true"
            android:gravity="center"
            android:onClick="startNavi"
            android:text="导航"
            android:textColor="@drawable/selector_text_color_black_white"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>